{
  "expo": {
    "name": "Holiday Lights Pro",
    "slug": "lights",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "lightsapp",
    "userInterfaceStyle": "light",
    "statusBarStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tgharles.lightsapp",
      "buildNumber": "1",
      "userInterfaceStyle": "light",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to your camera to take photos for your projects",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select images for your projects",
        "NSLocationWhenInUseUsageDescription": "This app may use location for project addresses",
        "CFBundleDisplayName": "Holiday Lights Pro",
        "UIStatusBarStyle": "UIStatusBarStyleDarkContent",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "statusBar": {
        "barStyle": "dark-content",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.tgharles.lightsapp",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "This app needs access to your photos to allow you to add images to your projects."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos.",
          "savePhotosPermission": "Allow $(PRODUCT_NAME) to save photos."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "ccf655d6-3912-429d-aacf-3b0fe4018e60"
      }
    },
    "owner": "tgharles"
  }
}
